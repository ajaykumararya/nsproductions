<form>
    
    <div class="form-group">
        <label>Father Name</label>
        <input type="text" id="father_name" placeholder="Enter Father Name.." value="{father_name}" class="form-control">
    </div>
    
    <div class="form-group">
        <label>DOB</label>
        <input type="date" id="dob" placeholder="Enter Name.." class="form-control" value="{dob}">
    </div>
    
    <div class="form-group">
        <label>Address</label>
        <textarea type="text" id="address" placeholder="Enter Address.." class="form-control">{address}</textarea>
    </div>
</form>